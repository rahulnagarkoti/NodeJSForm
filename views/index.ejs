<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<style>

 .custom-btn
   {
  background-color: #9b4dca;
    border: 0.1rem solid #9b4dca;
    border-radius: .4rem;
    color: #fff;
    cursor: pointer;
    display: inline-block;
    font-size: 1.1rem;
    font-weight: 700;
    height: 3.8rem;
    letter-spacing: .1rem;
    line-height: 3.8rem;
    padding: 0 3.0rem;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    white-space: nowrap;

   };
::placeholder {
  color:white;
  opacity: 1; 
}
    .modal-content
    {
      font-size: larger;
    }

  select option {
  margin: 40px;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  text-shadow: 0 1px 0 rgba(0, 0, 0, 0.4);
}
input, select{
    font-size: 13px;
    color: white;
}
input
{
  color: white !important;
  font-size: 13px !important;
  background-color:#4f4c4c !important;
}
::placeholder{color: white !important;}
</style>

<div class="container">
    <h2>Blog Spot</h2>
    <div class="panel panel-default">
      <div class="panel-heading" id="panel-head" style="position: fixed; width:100%; left:0; right:0;background-color:#4f4c4c; color: white; top: 0;z-index: 99999; padding:15px;">
        <form action="/getData" method="post">
            <div class="row">
                <div class="form-group col-md-2">
                </div>
            <div class="form-group col-md-2">
                <label>Language </label>
                <select id="language" name="language">
                    <% languages.forEach((item)=>{ %>
                        <option value="<%= item.id%>"><%= item.lang%></option>
                        <% })%>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label>Topic </label>
                <input id="topic" class="form-control" name="topic" value="<%= previousTopic %>" placeholder="Enter keywords.."/>
            </div>
            <div class="form-group col-md-2">
                <label>Date Posted </label>
                <input type="date" name="date" value="<%= previousDate %>" class="form-control" />
                <input type="hidden" id="tempVal" value="<%= previousLang %>">
            </div>
            <div class="form-group col-md-2">
              <label style="color: #4f4c4c;">.</label>
              <button class="button form-control custom-btn" type="submit">Search</button>

            </div>
            </div>

        </form>
        <div id="myModal" class="modal fade hide" style="color:black ;" tabindex="-1">
          <div class="modal-dialog modal-lg">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title" id="modalHeader"></h5>
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                  </div>
                  <div class="modal-body" id=modalBody>
                  </div>
                  <div class="modal-footer" id = "modalFooter">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
              </div>
          </div>
        </div>
      </div>

      <div class="panel-body" id="panel-bod" style="margin-top: 120px;">
        <div class="list-group" >
            <% posts.forEach((post) => { %>
              <div  class="list-group-item">
                <a  href="#" class="ablock"><h4 class="list-group-item-heading"><%= post.title %></h4></a>
                <p class="list-group-item-text"><%= post.content %></p>
                <p class="list-group-item-text"><%= post.date %></p>
              </div>
            <% }) %>
          </div>
      </div>
    </div>
  </div>

  <!-- Modal -->

  <script  src="https://code.jquery.com/jquery-3.5.1.min.js"  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="  crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  <script>
  //if content is empty-> add a message
  if ($(".list-group").find(".list-group-item").length <= 0)
    {
      $(".list-group").append("<p style='text-align:center;font-size='larger';><b>No Results to display</b></p>")
    }

  //select previously selected language after filtering
  $("#language").val($("#tempVal").val());
  //modal operations
  $(".ablock").on("click",function(e)
  {
    debugger;
    $("#modalHeader").text($(this).text());
    $("#modalBody").text($(this).siblings('p').text());
    $('#myModal').modal('show');
  });
</script>
