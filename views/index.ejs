<style>
.custom-btn
{
  background-color: #9b4dca;
    border: 0.1rem solid #9b4dca;
    border-radius: .4rem;
    color: #fff;
    cursor: pointer;
    display: inline-block;
    font-size: 1.1rem;
    font-weight: 700;
    height: 3.8rem;
    letter-spacing: .1rem;
    line-height: 3.8rem;
    padding: 0 3.0rem;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    white-space: nowrap;

};
#panel-head
{
    position: fixed;
    width: 100%;
    z-index: 99999;
    left:0;
    right:0;
    background-color: black;
    color: white;
    top: 0;};
    #panel-bod
    {
      margin-top: 120px;

    }
</style>

<div class="container">
    <h2>Blog Spot</h2>
    <div class="panel panel-default">
      <div class="panel-heading" id="panel-head">
        <form action="/getData" method="post">
            <div class="row">
                <div class="form-group col-md-2">
                </div>
            <div class="form-group col-md-2">
                <label>Language </label>
                <select id="language" name="language">
                    <% languages.forEach((item)=>{ %>
                        <option value="<%= item.id%>"><%= item.lang%></option>
                        <% })%>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label>Topic </label>
                <input id="topic" class="form-control" name="topic" placeholder="Enter keywords.."/>
            </div>
            <div class="form-group col-md-2">
                <label>Date Posted </label>
                <input type="date" name="date" class="form-control" />
            </div>
            <div class="form-group col-md-2">
              <label>.</label>
              <button class="button form-control custom-btn" type="submit">Search</button>

            </div>
            </div>

        </form>
      </div>
      <div class="panel-body" id="panel-bod">
        <div class="list-group">
            <% posts.forEach((post) => { %>
              <div  class="list-group-item">
                <h4 class="list-group-item-heading"><%= post.title %></h4>
                <p class="list-group-item-text"><%= post.content %></p>
                <p class="list-group-item-text"><%= post.date %></p>

              </div>
            <% }) %>
          </div>
      </div>
    </div>
  </div>

